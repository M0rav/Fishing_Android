<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actvities.Main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/transparent"
            android:elevation="4dp" />

        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A legnépszerűbb halak a világon"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A legnépszerűbb halak a világon közé tartozik a lazac, a tonhal és a pisztráng. Ezek a halak ízletesek és táplálóak, és rengeteg egészségügyi előnnyel rendelkeznek."
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:padding="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hogyan lehet a halakat egészségesen elkészíteni?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ha egészségesen szeretnéd elkészíteni a halakat, akkor fontos, hogy ne használj túl sok olajat vagy sót. Ajánlott a grillezés vagy a sütés párolóban, és ha lehet, akkor fogyassz hozzá zöldségeket és teljes kiőrlésű gabonákat."
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:padding="16dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A halak jótékony hatása az egészségre"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A halakban található omega-3 zsírsavak számos egészségügyi előnnyel rendelkeznek, például csökkentik a szívbetegségek, a stroke és a rák kockázatát. Emellett jótékony hatással vannak az agyra és az idegrendszerre, és segíthetnek csökkenteni az ízületi gyulladást és a depressziót."
            android:textSize="16sp"
            android:textColor="@color/blue"
            android:padding="16dp"/>


    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:itemIconTint="@color/black"
        app:menu="@menu/menu_items" />


</androidx.drawerlayout.widget.DrawerLayout>